from random import randint
r = randint(0,10)
c=0
print('I`ll think of a number from 0 to 5, try to guess!!')
player = int(input('How number i think? '))
print('Processing...')

while r == player:
    print('You loose! I think {}'.format(r))
    c+=1
print('Congrats you got it right!')
print('You try {} times'.format(c))