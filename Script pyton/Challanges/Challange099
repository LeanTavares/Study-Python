from time import sleep

def biggest(* n):
    cont = big = 0
    print('-='*30)
    for val in n:
        print(f'{val} ',  end ='',flush=True)
        sleep(0.3)
        if cont==0:
            big = val
        else:
            if val>big:
                big = val
        cont += 1
    print(f'{cont} values')
    print(f'The biggest value is {big}.')

